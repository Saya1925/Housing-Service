{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "linebreak-style": "off",
      "semi": ["error", "always"],
      "no-multiple-empty-lines": ["error", { "max": 3 }]
    }
  }
  